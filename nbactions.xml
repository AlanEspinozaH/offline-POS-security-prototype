<?xml version="1.0" encoding="UTF-8"?>
<actions>
  <!-- RUN -->
  <action>
    <actionName>run</actionName>
    <packagings>
      <packaging>jar</packaging>
    </packagings>
    <goals>
      <goal>process-classes</goal>
      <goal>org.openjfx:javafx-maven-plugin:0.0.8:run</goal>
    </goals>
    <properties>
      <exec.mainClass>${packageClassName}</exec.mainClass>
    </properties>
  </action>

  <!-- DEBUG (simple) -->
  <action>
    <actionName>debug</actionName>
    <packagings>
      <packaging>jar</packaging>
    </packagings>
    <goals>
      <goal>process-classes</goal>
      <goal>org.openjfx:javafx-maven-plugin:0.0.8:run</goal>
    </goals>
    <properties>
      <exec.mainClass>${packageClassName}</exec.mainClass>
    </properties>
  </action>

  <!-- PROFILE (opcional, igual que run) -->
  <action>
    <actionName>profile</actionName>
    <packagings>
      <packaging>jar</packaging>
    </packagings>
    <goals>
      <goal>process-classes</goal>
      <goal>org.openjfx:javafx-maven-plugin:0.0.8:run</goal>
    </goals>
    <properties>
      <exec.mainClass>${packageClassName}</exec.mainClass>
    </properties>
  </action>
</actions>
